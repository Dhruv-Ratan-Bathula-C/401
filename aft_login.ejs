<!DOCTYPE html>
<html>
<head>
    <title>Weather App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .result {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Weather App</h1>
    <form id="weatherForm">
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required><br><br>
        <input type="submit" value="Get Weather">
    </form>
    <div class="result" id="result"></div>

    <script>
        document.getElementById('weatherForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const location = document.getElementById('location').value;
            
            const mockWeatherData = {
                "name": location,
                "main": {
                    "temp": 25,
                    "humidity": 60
                },
                "weather": [{
                    "description": "clear sky"
                }],
                "wind": {
                    "speed": 3.5
                }
            };

            const weatherData = `
                <h2>Weather in ${mockWeatherData.name}</h2>
                <p>Temperature: ${mockWeatherData.main.temp} Â°C</p>
                <p>Weather: ${mockWeatherData.weather[0].description}</p>
                <p>Humidity: ${mockWeatherData.main.humidity}%</p>
                <p>Wind Speed: ${mockWeatherData.wind.speed} m/s</p>
            `;
            document.getElementById('result').innerHTML = weatherData;
        });
    </script>
</body>
</html>
